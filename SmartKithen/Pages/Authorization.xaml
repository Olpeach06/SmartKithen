<Page x:Class="SmartKithen.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartKithen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Authorization"
      Background="#FFF8FC">

    <Grid>
        <!-- Фон с градиентом -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FC" Offset="0"/>
                    <GradientStop Color="#FFAC6586" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Width="400"
                        Margin="40">

                <!-- Шапка с кнопкой назад -->
                <Grid Margin="0,0,0,30">
                    <!-- Кнопка Назад -->
                    <Button x:Name="btnBack"
                            Content="← Назад" 
                            FontSize="14"
                            Background="Transparent" 
                            BorderThickness="0"
                            Foreground="#1A5D34"
                            Padding="10,5"
                            HorizontalAlignment="Left"
                            Click="btnBack_Click" Height="53" VerticalAlignment="Top"/>

                    <!-- Логотип по центру -->
                    <StackPanel Orientation="Vertical" 
                                HorizontalAlignment="Right">
                        <TextBlock Text="🍳" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center"
                                   Foreground="#FF1A5D34"/>
                        <TextBlock Text="Smart Kitchen" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#1A5D34"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Основная карточка -->
                <Border Background="White" 
                        CornerRadius="25" 
                        Padding="40,35" 
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Opacity="0.15" ShadowDepth="5"/>
                    </Border.Effect>

                    <StackPanel Orientation="Vertical">

                        <!-- Заголовок -->
                        <TextBlock Text="Вход в Smart Kitchen" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#1A5D34"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,30"/>

                        <!-- Поля ввода -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,25">

                            <!-- Электронная почта -->
                            <TextBlock Text="Электронная почта" 
                                       FontSize="14" 
                                       Foreground="#666"
                                       Margin="0,0,0,8"/>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Margin="0,0,0,20">
                                <TextBox x:Name="tbEmail"
                                         FontSize="14" 
                                         Padding="15,12"
                                         BorderThickness="0"
                                         Background="Transparent"/>
                            </Border>

                            <!-- Пароль -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Пароль" 
                                           FontSize="14" 
                                           Foreground="#666"
                                           Grid.Column="0"/>

                                <Button x:Name="btnForgotPass"
                                        Content="Забыли пароль?" 
                                        FontSize="12"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Foreground="#1A5D34"
                                        Padding="5,0"
                                        Click="btnForgotPassword_Click"
                                        Grid.Column="1"/>
                            </Grid>

                            <!-- Поле пароля с глазом -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="0">
                                    <PasswordBox x:Name="pbPassword"
                                                 FontSize="14" 
                                                 Padding="15,12"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 PasswordChar="●"/>
                                </Border>

                                <!-- Кнопка показать пароль -->
                                <Button x:Name="btnShowPassword"
                                        Content="👁️" 
                                        FontSize="12"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Padding="10,8"
                                        Margin="5,0,0,0"
                                        Click="btnShowPass_Click"
                                        Grid.Column="1"/>
                            </Grid>
                        </StackPanel>

                        <!-- Кнопка Войти -->
                        <Border Background="#1A5D34" 
                            CornerRadius="15" 
                            Margin="0,0,0,25"
                            Height="55">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="3"/>
                            </Border.Effect>
                            <Button x:Name="btnLogin"
                                Content="ВОЙТИ" 
                                FontSize="16" 
                                FontWeight="Bold"
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0"
                                Padding="20,15"
                                Click="btnLogin_Click"/>
                        </Border>
                        <!-- Разделитель -->
                        <TextBlock Text="Или продолжить как:" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"/>

                        <!-- Кнопка Гость -->
                        <Border BorderBrush="#CFA1C1" BorderThickness="2" CornerRadius="12">
                            <Button x:Name="btnGuest"
                                    Content="👤 Продолжить как гость" 
                                    FontSize="14" 
                                    FontWeight="SemiBold"
                                    Background="Transparent" 
                                    Foreground="#1A5D34" 
                                    BorderThickness="0"
                                    Padding="20,12"
                                    Click="btnGuest_Click"/>
                        </Border>

                        <!-- Ссылка на регистрацию -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center"
                                    Margin="0,20,0,0">
                            <TextBlock Text="Нет аккаунта? " 
                                       FontSize="14" 
                                       Foreground="#666"/>
                            <Button x:Name="btnRegister"
                                    Content="Зарегистрироваться" 
                                    FontSize="14"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Foreground="#1A5D34"
                                    Padding="5,0"
                                    Click="btnRegister_Click"/>
                        </StackPanel>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>