<Page x:Class="SmartKithen.Pages.MyRecipes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="MyRecipes"
      Background="#FFF8FC">

    <Page.Resources>
        <!-- Стиль для карточек рецептов -->
        <Style x:Key="RecipeCardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF0F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для основных кнопок -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1A5D34"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" Opacity="0.2" ShadowDepth="3"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#144528"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F351E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для вторичных кнопок -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1A5D34"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фон с градиентом -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FC" Offset="0"/>
                    <GradientStop Color="#FFAC6586" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="20">

                <!-- Шапка -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Логотип и название -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="15,10"
                            HorizontalAlignment="Left">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🍳" 
                                       FontSize="20" 
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Smart Kitchen" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#1A5D34"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Поиск -->
                    <Border Grid.Column="1"
                            Background="White" 
                            CornerRadius="12" 
                            Padding="15,10"
                            Margin="20,0"
                            VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" 
                                       FontSize="14" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"
                                       Foreground="#666"/>
                            <TextBlock Text="Поиск..." 
                                       FontSize="14" 
                                       Foreground="#999"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Правые элементы -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">

                        <!-- Иконки -->
                        <Border Background="White" 
                                CornerRadius="10" 
                                Padding="10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <TextBlock Text="⚙️" 
                                       FontSize="16" 
                                       Foreground="#1A5D34"/>
                        </Border>

                        <!-- Профиль -->
                        <Border Background="#1A5D34" 
                                CornerRadius="12" 
                                Padding="12,8"
                                Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" 
                                           FontSize="12"
                                           Margin="0,0,8,0"
                                           Foreground="White"/>
                                <TextBlock Text="Анна" 
                                           FontSize="12" 
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <!-- Добавить рецепт -->
                        <Button x:Name="AddRecipeButton"
                                Content="+ Добавить рецепт" 
                                Style="{StaticResource PrimaryButtonStyle}"
                                FontSize="12"
                                Padding="15,10"
                                Click="AddRecipeButton_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Заголовок и управление -->
                <Grid Margin="0,0,0,25">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Column="0"
                               Text="Мои рецепты" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#1A5D34"
                               VerticalAlignment="Center"/>

                    <!-- Фильтр -->
                    <Button Grid.Column="2"
                            Content="Фильтр ▼" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,10,0"
                            Click="FilterButton_Click"/>

                    <!-- Сортировка -->
                    <Button Grid.Column="3"
                            Content="Сортировка ▼" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="SortButton_Click"/>
                </Grid>

                <!-- Сетка рецептов -->
                <UniformGrid Columns="3" 
                             Rows="2"
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,25">

                    <!-- Рецепт 1: Пицца -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="PizzaButton"
                                Style="{StaticResource RecipeCardButtonStyle}"
                                Click="PizzaButton_Click">
                            <StackPanel Orientation="Vertical">
                                <!-- Иконка временного состояния -->
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Width="24" 
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,10"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⏱️" 
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Категория и название -->
                                <TextBlock Text="Пицца" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="&quot;Наполеон&quot;" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1A5D34"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>

                                <!-- Время и рейтинг -->
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="30 мин" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock Text=" ★★★★" 
                                               FontSize="12" 
                                               Foreground="#FFA500"
                                               Margin="10,0,0,0"/>
                                </StackPanel>

                                <!-- Автор -->
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⌛Гость" 
                                               FontSize="11" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Рецепт 2: Торт -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="CakeButton"
                                Style="{StaticResource RecipeCardButtonStyle}"
                                Click="CakeButton_Click">
                            <StackPanel Orientation="Vertical">
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Width="24" 
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,10"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⏱️" 
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Торт" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="&quot;Наполеон&quot;" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1A5D34"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="120 мин" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock Text=" ★★★★" 
                                               FontSize="12" 
                                               Foreground="#FFA500"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⌛ Гость" 
                                               FontSize="11" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Рецепт 3: Суп -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="SoupButton"
                                Style="{StaticResource RecipeCardButtonStyle}"
                                Click="SoupButton_Click">
                            <StackPanel Orientation="Vertical">
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Width="24" 
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,10"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⏱️" 
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Суп" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Грибной" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1A5D34"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="45 мин" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock Text=" ★★★☆" 
                                               FontSize="12" 
                                               Foreground="#FFA500"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⌛ Гость" 
                                               FontSize="11" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Рецепт 4: Салат -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="SaladButton"
                                Style="{StaticResource RecipeCardButtonStyle}"
                                Click="SaladButton_Click">
                            <StackPanel Orientation="Vertical">
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Width="24" 
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,10"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⏱️" 
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Салат" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="&quot;Цезарь&quot;" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1A5D34"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="20 мин" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock Text=" ★★★★" 
                                               FontSize="12" 
                                               Foreground="#FFA500"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⌛ Гость" 
                                               FontSize="11" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Рецепт 5: Суши -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="SushiButton"
                                Style="{StaticResource RecipeCardButtonStyle}"
                                Click="SushiButton_Click">
                            <StackPanel Orientation="Vertical">
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Width="24" 
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,10"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⏱️" 
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Суши" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Калифорния" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1A5D34"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="60 мин" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock Text=" ★★★★" 
                                               FontSize="12" 
                                               Foreground="#FFA500"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⌛ Гость" 
                                               FontSize="11" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Рецепт 6: Тирамису -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="8"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="TiramisuButton"
                                Style="{StaticResource RecipeCardButtonStyle}"
                                Click="TiramisuButton_Click">
                            <StackPanel Orientation="Vertical">
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Width="24" 
                                        Height="24"
                                        HorizontalAlignment="Right"
                                        Margin="0,0,0,10"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⏱️" 
                                               FontSize="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Тирамису" 
                                           FontSize="12" 
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Тирамису" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#1A5D34"
                                           Margin="0,0,0,15"
                                           TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal" 
                                            Margin="0,0,0,10">
                                    <TextBlock Text="90 мин" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock Text=" ★★★★" 
                                               FontSize="12" 
                                               Foreground="#FFA500"
                                               Margin="10,0,0,0"/>
                                </StackPanel>
                                <Border Background="#FFF8FC" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        BorderBrush="#CFA1C1"
                                        BorderThickness="1">
                                    <TextBlock Text="⌛ Гость" 
                                               FontSize="11" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Button>
                    </Border>

                </UniformGrid>

                <!-- Кнопка загрузки еще -->
                <Button x:Name="LoadMoreButton"
                        Content="Загрузить ещё" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Padding="20,12"
                        HorizontalAlignment="Center"
                        Click="LoadMoreButton_Click"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>