<Page x:Class="SmartKithen.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartKithen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="HomePage"
      Background="#FFF8FC">

    <Grid>
        <!-- Фон с градиентом -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FC" Offset="0"/>
                    <GradientStop Color="#FFAC6586" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="20">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Width="380"
                        Margin="0,40,0,40">

                <!-- Стильный логотип -->
                <Border Background="White" 
                        CornerRadius="25" 
                        Padding="40,30" 
                        Margin="0,0,0,35"
                        HorizontalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" 
                                          Opacity="0.15" 
                                          ShadowDepth="5" 
                                          Direction="270"/>
                    </Border.Effect>
                    <StackPanel Orientation="Vertical" 
                                HorizontalAlignment="Center">
                        <Viewbox Width="80" Margin="0,0,0,15">
                        </Viewbox>
                        <TextBlock Text="Smart Kitchen" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#1A5D34"
                                   HorizontalAlignment="Center"
                                   FontFamily="Segoe UI, Arial"/>
                        <TextBlock Text="🍳" 
                                   FontSize="32" 
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   Foreground="#CFA1C1"/>
                    </StackPanel>
                </Border>

                <!-- Подзаголовок -->
                <TextBlock Text="Ваш интеллектуальный помощник на кухне" 
                           FontSize="16" 
                           Foreground="#666" 
                           TextAlignment="Center"
                           Margin="0,0,0,45"
                           FontWeight="Medium"/>

                <!-- Основная кнопка -->
                <Button x:Name="GuestBtn"
                        Content="НАЧАТЬ КАК ГОСТЬ" 
                        FontSize="15" 
                        FontWeight="Bold"
                        Background="#1A5D34" 
                        Foreground="White" 
                        BorderThickness="0"
                        Padding="25,18"
                        Margin="0,0,0,25"
                        Height="60"
                        Click="GuestButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="15"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" 
                                                      Opacity="0.2" 
                                                      ShadowDepth="3"/>
                                </Border.Effect>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#144528"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="20" 
                                                              Opacity="0.3" 
                                                              ShadowDepth="4"
                                                              Color="#CFA1C1"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0F351E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Кнопки авторизации -->
                <StackPanel Orientation="Vertical" 
                            Margin="0,0,0,35">

                    <!-- Войти в аккаунт -->
                    <Button x:Name="LoginBtn"
                            Content="Войти в аккаунт" 
                            FontSize="14" 
                            FontWeight="SemiBold"
                            Background="White" 
                            Foreground="#1A5D34" 
                            BorderBrush="#CFA1C1"
                            BorderThickness="2"
                            Padding="25,14"
                            Margin="0,0,0,12"
                            Click="LoginBtn_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="loginBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="12"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" 
                                                          Opacity="0.1" 
                                                          ShadowDepth="1"/>
                                    </Border.Effect>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="loginBorder" Property="Background" Value="#CFA1C1"/>
                                        <Setter TargetName="loginBorder" Property="BorderBrush" Value="#CFA1C1"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Зарегистрироваться -->
                    <Button x:Name="RegistBtn"
        Content="Создать аккаунт" 
        FontSize="14" 
        FontWeight="SemiBold"
        Background="Transparent" 
        Foreground="#1A5D34" 
        BorderBrush="#CFA1C1"
        BorderThickness="2"
        Padding="25,12"
        Click="RegisterBtn_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="regBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="12"
                    Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" 
                                      Opacity="0.1" 
                                      ShadowDepth="1"/>
                                    </Border.Effect>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="regBorder" Property="Background" Value="White"/>
                                        <Setter TargetName="regBorder" Property="BorderBrush" Value="#CFA1C1"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Нижняя панель -->
                <Border Background="White" 
                        CornerRadius="20" 
                        Padding="30,25" 
                        Margin="0,20,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                          Opacity="0.1" 
                                          ShadowDepth="2"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">

                        <Button x:Name="AboutBtn"
                                Content="О приложении" 
                                Background="Transparent"
                                Foreground="#1A5D34"
                                BorderThickness="0"
                                Padding="12,8"
                                FontSize="13"
                                FontWeight="Medium"
                                Click="AboutBt_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#CFA1C1"/>
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Rectangle Width="1" 
                                   Height="16" 
                                   Fill="#E0E0E0" 
                                   Margin="15,0"/>

                        <Button x:Name="HelpBtn"
                                Content="Помощь"
                                Background="Transparent"
                                Foreground="#1A5D34"
                                BorderThickness="0"
                                Padding="12,8"
                                FontSize="13"
                                FontWeight="Medium"
                                Click="HelpBtn_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#CFA1C1"/>
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>