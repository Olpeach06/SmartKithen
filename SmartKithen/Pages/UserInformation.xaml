<Page x:Class="SmartKithen.Pages.UserInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartKithen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="UserInformation"
      Background="#FFF8FC">

    <Grid>
        <!-- Фон с градиентом -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FC" Offset="0"/>
                    <GradientStop Color="#FFAC6586" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top"
                        Width="500"
                        Margin="40">

                <!-- Шапка с навигацией -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Кнопка Назад -->
                    <Button x:Name="btnBack"
                            Grid.Column="0"
                            Content="← Назад" 
                            FontSize="14"
                            Background="Transparent" 
                            BorderThickness="0"
                            Foreground="#1A5D34"
                            Padding="10,5"
                            HorizontalAlignment="Left"
                            Click="btnBack_Click"/>

                    <!-- Заголовок -->
                    <TextBlock Grid.Column="1"
                               Text="Настройки" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#1A5D34"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <!-- Кнопка Сохранить -->
                    <Border Grid.Column="2"
                            Background="#1A5D34" 
                            CornerRadius="10"
                            Padding="0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" Opacity="0.2" ShadowDepth="2"/>
                        </Border.Effect>
                        <Button x:Name="btnSave"
                                Content="Сохранить" 
                                FontSize="14"
                                Background="Transparent" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,8"
                                Click="btnSave_Click"/>
                    </Border>
                </Grid>

                <!-- Раздел ПРОФИЛЬ -->
                <Border Background="White" 
                        CornerRadius="20" 
                        Padding="30,25" 
                        Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="3"/>
                    </Border.Effect>
                    <StackPanel Orientation="Vertical">

                        <TextBlock Text="ПРОФИЛЬ" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#1A5D34"
                                   Margin="0,0,0,20"/>

                        <!-- Имя -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Имя:" 
                                       FontSize="14" 
                                       Foreground="#666"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"/>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="1">
                                <TextBox x:Name="tbName"
                                         Text="Анна" 
                                         FontSize="14" 
                                         Padding="12,10"
                                         BorderThickness="0"
                                         Background="Transparent"/>
                            </Border>
                        </Grid>

                        <!-- Email -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Email:" 
                                       FontSize="14" 
                                       Foreground="#666"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"/>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="1">
                                <TextBox x:Name="tbEmail"
                                         Text="anna@email.com" 
                                         FontSize="14" 
                                         Padding="12,10"
                                         BorderThickness="0"
                                         Background="Transparent"/>
                            </Border>
                        </Grid>

                        <!-- Сменить пароль -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Сменить пароль:" 
                                       FontSize="14" 
                                       Foreground="#666"
                                       VerticalAlignment="Center"
                                       Grid.Column="0"/>
                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="1">
                                <PasswordBox x:Name="pbPassword"
                                             PasswordChar="●" 
                                             FontSize="14" 
                                             Padding="12,10"
                                             BorderThickness="0"
                                             Background="Transparent"/>
                            </Border>
                            <Border Grid.Column="2"
                                    BorderBrush="#CFA1C1" 
                                    BorderThickness="2" 
                                    CornerRadius="10"
                                    Margin="10,0,0,0">
                                <Button x:Name="btnChangePassword"
                                        Content="Изменить" 
                                        FontSize="12"
                                        Background="Transparent" 
                                        Foreground="#1A5D34"
                                        BorderThickness="0"
                                        Padding="15,8"
                                        Click="btnChangePassword_Click"/>
                            </Border>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- Раздел ОСНОВНЫЕ НАСТРОЙКИ -->
                <Border Background="White" 
        CornerRadius="20" 
        Padding="30,25" 
        Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="3"/>
                    </Border.Effect>
                    <StackPanel Orientation="Vertical">

                        <TextBlock Text="ОСНОВНЫЕ НАСТРОЙКИ" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="#1A5D34"
                   Margin="0,0,0,20"/>

                        <!-- Единицы измерения -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                <CheckBox x:Name="chbUnits"
                          IsChecked="True"
                          Margin="0,0,10,0"/>
                                <TextBlock Text="Единицы измерения:" 
                           FontSize="14" 
                           Foreground="#666"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="1">
                                <ComboBox x:Name="cobUnits"
                          SelectedIndex="0"
                          FontSize="14" 
                          Padding="12,8"
                          BorderThickness="0"
                          Background="Transparent">
                                    <ComboBoxItem Content="Метрические (г, мл)"/>
                                    <ComboBoxItem Content="Имперские (oz, cup)"/>
                                </ComboBox>
                            </Border>
                        </Grid>

                        <!-- Язык интерфейса -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                <CheckBox x:Name="chbLanguage"
                          IsChecked="True"
                          Margin="0,0,10,0"/>
                                <TextBlock Text="Язык интерфейса:" 
                           FontSize="14" 
                           Foreground="#666"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="1">
                                <ComboBox x:Name="cobLanguage"
                          SelectedIndex="0"
                          FontSize="14" 
                          Padding="12,8"
                          BorderThickness="0"
                          Background="Transparent">
                                    <ComboBoxItem Content="Русский"/>
                                    <ComboBoxItem Content="English"/>
                                </ComboBox>
                            </Border>
                        </Grid>

                        <!-- Темная тема -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                <CheckBox x:Name="chbTheme"
                          IsChecked="False"
                          Margin="0,0,10,0"/>
                                <TextBlock Text="Темная тема:" 
                           FontSize="14" 
                           Foreground="#666"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border BorderBrush="#CFA1C1" BorderThickness="2" CornerRadius="10" Grid.Column="2">
                                <ToggleButton x:Name="btnThemeToggle"
                              Content="Переключить"
                              FontSize="12"
                              Background="Transparent" 
                              Foreground="#1A5D34"
                              BorderThickness="0"
                              Padding="12,8"
                              Checked="btnThemeToggle_Checked"
                              Unchecked="btnThemeToggle_Unchecked"/>
                            </Border>
                        </Grid>

                        <!-- Уведомления -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                <CheckBox x:Name="chbNotifications"
                          IsChecked="True"
                          Margin="0,0,10,0"/>
                                <TextBlock Text="Уведомления:" 
                           FontSize="14" 
                           Foreground="#666"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="10" Grid.Column="1">
                                <ComboBox x:Name="cobNotifications"
                          SelectedIndex="0"
                          FontSize="14" 
                          Padding="12,8"
                          BorderThickness="0"
                          Background="Transparent">
                                    <ComboBoxItem Content="Включены"/>
                                    <ComboBoxItem Content="Выключены"/>
                                </ComboBox>
                            </Border>
                        </Grid>

                    </StackPanel>
                </Border>

                <!-- Раздел ДАННЫЕ -->
                <Border Background="White" 
                        CornerRadius="20" 
                        Padding="30,25" 
                        Margin="0,0,0,25">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="3"/>
                    </Border.Effect>
                    <StackPanel Orientation="Vertical">

                        <TextBlock Text="ДАННЫЕ" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#1A5D34"
                                   Margin="0,0,0,20"/>

                        <!-- Кнопки управления данными -->
                        <StackPanel Orientation="Vertical" 
                                    Margin="0,0,0,20">

                            <Border BorderBrush="#CFA1C1" BorderThickness="2" CornerRadius="12" Margin="0,0,0,10">
                                <Button x:Name="btnBackup"
                                        Content="Создать резервную копию" 
                                        FontSize="14"
                                        Background="Transparent" 
                                        Foreground="#1A5D34"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        Click="btnBackup_Click"/>
                            </Border>

                            <Border BorderBrush="#CFA1C1" BorderThickness="2" CornerRadius="12" Margin="0,0,0,10">
                                <Button x:Name="btnRestore"
                                        Content="Восстановить из копии" 
                                        FontSize="14"
                                        Background="Transparent" 
                                        Foreground="#1A5D34"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        Click="btnRestore_Click"/>
                            </Border>

                            <Border BorderBrush="#CFA1C1" BorderThickness="2" CornerRadius="12" Margin="0,0,0,15">
                                <Button x:Name="btnExport"
                                        Content="Экспорт всех рецептов" 
                                        FontSize="14"
                                        Background="Transparent" 
                                        Foreground="#1A5D34"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        Click="btnExport_Click"/>
                            </Border>
                        </StackPanel>

                        <!-- Разделитель -->
                        <Rectangle Height="1" 
                                   Fill="#E0E0E0" 
                                   Margin="0,0,0,15"/>

                        <!-- Кнопка удаления аккаунта -->
                        <Border Background="#FF6B6B" 
                                CornerRadius="12" 
                                Padding="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" Opacity="0.2" ShadowDepth="2"/>
                            </Border.Effect>
                            <Button x:Name="btnDeleteAccount"
                                    Content="🗑️ Удалить аккаунт" 
                                    FontSize="14"
                                    Background="Transparent" 
                                    BorderThickness="0"
                                    Foreground="White"
                                    Padding="15,10"
                                    Click="btnDeleteAccount_Click">
                                <Button.ToolTip>
                                    <ToolTip Content="Необратимо!" 
                                             Background="#FF4444" 
                                             Foreground="White"/>
                                </Button.ToolTip>
                            </Button>
                        </Border>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>