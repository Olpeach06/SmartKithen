<Page x:Class="SmartKithen.Pages.MainPageUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="800"
      Title="MainPageUser"
      Background="#FFF8FC">

    <Page.Resources>
        <!-- Стиль для основных кнопок -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек -->
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFF0F5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Фон с градиентом -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF8FC" Offset="0"/>
                    <GradientStop Color="#FFAC6586" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="20">

                <!-- Шапка -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Логотип и название -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="15" 
                            Padding="15,10"
                            HorizontalAlignment="Left">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🍳" 
                                       FontSize="20" 
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Smart Kitchen" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#1A5D34"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Правые элементы -->
                    <StackPanel Grid.Column="2" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">

                        <!-- Уведомления -->
                        <Border Background="White" 
                                CornerRadius="10" 
                                Padding="10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <TextBlock Text="🔔" 
                                       FontSize="16" 
                                       Foreground="#1A5D34"/>
                        </Border>

                        <!-- Профиль пользователя -->
                        <Border Background="#1A5D34" 
                                CornerRadius="12" 
                                Padding="12,8"
                                Cursor="Hand">
                                <!--MouseLeftButtonDown="UserProfile_MouseLeftButtonDown"-->
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👤" 
                                           FontSize="12"
                                           Margin="0,0,8,0"
                                           Foreground="White"/>
                                <TextBlock x:Name="UserNameText"
                                           Text="Анна" 
                                           FontSize="12" 
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <!-- Настройки -->
                        <Border Background="White" 
                                CornerRadius="10" 
                                Padding="10"
                                Margin="10,0,10,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <TextBlock Text="⚙️" 
                                       FontSize="16" 
                                       Foreground="#1A5D34"/>
                        </Border>

                        <!-- Синхронизация -->
                        <Border Background="White" 
                                CornerRadius="10" 
                                Padding="10"
                                Margin="0,0,10,0"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                            </Border.Effect>
                            <TextBlock Text="🔄" 
                                       FontSize="16" 
                                       Foreground="#1A5D34"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Приветствие с именем пользователя -->
                <Border Background="White" 
                        CornerRadius="15" 
                        Padding="25,20"
                        Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="3"/>
                    </Border.Effect>
                    <TextBlock x:Name="WelcomeText"
                               Text="Добро пожаловать на вашу умную кухню, Анна!" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Foreground="#1A5D34"
                               TextAlignment="Center"/>
                </Border>

                <!-- Основные карточки -->
                <UniformGrid Columns="4" 
                             Rows="1" 
                             Margin="0,0,0,30"
                             HorizontalAlignment="Stretch">

                    <!-- Рецепты -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="btnRecipes"
                                Style="{StaticResource CardButtonStyle}"
                                Click="btnRecipes_Click">
                            <StackPanel Orientation="Vertical" 
                                        HorizontalAlignment="Center">
                                <TextBlock Text="📖" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Мои рецепты" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1A5D34"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="156" 
                                           FontSize="20" 
                                           FontWeight="Bold" 
                                           Foreground="#CFA1C1"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Список покупок -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="btnShoppingList"
                                Style="{StaticResource CardButtonStyle}"
                                Click="btnShoppingList_Click">
                            <StackPanel Orientation="Vertical" 
                                        HorizontalAlignment="Center">
                                <TextBlock Text="🛒" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Список покупок" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1A5D34"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Мои продукты -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="btnMyProducts"
                                Style="{StaticResource CardButtonStyle}"
                                Click="btnMyProducts_Click">
                            <StackPanel Orientation="Vertical" 
                                        HorizontalAlignment="Center">
                                <TextBlock Text="🥦" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Мои продукты" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1A5D34"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Случайный рецепт -->
                    <Border Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <Button x:Name="btnRandomRecipe"
                                Style="{StaticResource CardButtonStyle}"
                                Click="btnRandomRecipe_Click">
                            <StackPanel Orientation="Vertical" 
                                        HorizontalAlignment="Center">
                                <TextBlock Text="🎲" 
                                           FontSize="28"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Случайный рецепт" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#1A5D34"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </UniformGrid>

                <!-- Статистика и уведомления -->
                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Быстрая статистика -->
                    <Border Grid.Column="0"
                            Background="White" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="0,0,10,0"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="📊 Быстрая статистика" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1A5D34"
                                       Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Любимых рецептов:" 
                                           FontSize="13" 
                                           Foreground="#666"/>
                                <TextBlock Text="12" 
                                           FontSize="13" 
                                           FontWeight="Bold" 
                                           Foreground="#CFA1C1"
                                           Margin="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Продуктов отслеживается:" 
                                           FontSize="13" 
                                           Foreground="#666"/>
                                <TextBlock Text="23" 
                                           FontSize="13" 
                                           FontWeight="Bold" 
                                           Foreground="#CFA1C1"
                                           Margin="5,0,0,0"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Активных списков:" 
                                           FontSize="13" 
                                           Foreground="#666"/>
                                <TextBlock Text="3" 
                                           FontSize="13" 
                                           FontWeight="Bold" 
                                           Foreground="#CFA1C1"
                                           Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Срочные уведомления -->
                    <Border Grid.Column="1"
                            Background="#FFF8FC" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="10,0,0,0"
                            BorderBrush="#CFA1C1"
                            BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                        </Border.Effect>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="⚠️ Срочные уведомления" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="#1A5D34"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="• Молоко испортится через 2 дня" 
                                       FontSize="13" 
                                       Foreground="#666"
                                       Margin="0,0,0,5"/>

                            <TextBlock Text="• Яйца закончатся через 3 дня" 
                                       FontSize="13" 
                                       Foreground="#666"
                                       Margin="0,0,0,5"/>

                            <TextBlock Text="• Сыр в списке покупок" 
                                       FontSize="13" 
                                       Foreground="#666"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Недавние рецепты -->
                <Border Background="White" 
                        CornerRadius="15" 
                        Padding="25"
                        Margin="0,0,0,30"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                    </Border.Effect>
                    <StackPanel Orientation="Vertical">

                        <!-- Заголовок с кнопкой -->
                        <Grid Margin="0,0,0,20">
                            <TextBlock Text="Недавние рецепты" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#1A5D34"
                                       VerticalAlignment="Center"/>

                            <Border Background="#1A5D34" 
                                    CornerRadius="8" 
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    Cursor="Hand">
                                <TextBlock Text="Показать все" 
                                           FontSize="12"
                                           Foreground="White"
                                           FontWeight="SemiBold"/>
                            </Border>
                        </Grid>

                        <!-- Список рецептов -->
                        <UniformGrid Columns="4" 
                                     Rows="1" 
                                     HorizontalAlignment="Stretch">

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Пицца" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Торт" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Суп" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Салат" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </UniformGrid>

                    </StackPanel>
                </Border>

                <!-- Рекомендуем приготовить -->
                <Border Background="White" 
                        CornerRadius="15" 
                        Padding="25"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="5"/>
                    </Border.Effect>
                    <StackPanel Orientation="Vertical">

                        <TextBlock Text="Рекомендуем приготовить" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#1A5D34"
                                   Margin="0,0,0,20"/>

                        <!-- Рекомендуемые рецепты -->
                        <UniformGrid Columns="3" 
                                     Rows="1" 
                                     HorizontalAlignment="Stretch">

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Паста Карбонара" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Курица с овощами" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <Border Background="#FFF8FC" 
                                    CornerRadius="10" 
                                    Padding="15,12"
                                    Margin="5"
                                    BorderBrush="#CFA1C1"
                                    BorderThickness="1"
                                    Cursor="Hand">
                                <TextBlock Text="Цезарь" 
                                           FontSize="14"
                                           Foreground="#1A5D34"
                                           FontWeight="Medium"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </UniformGrid>

                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>